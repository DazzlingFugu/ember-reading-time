{
  "name": "ember-reading-time",
  "version": "4.0.0",
  "description": "Medium-like reading time estimation for EmberJS.",
  "keywords": [
    "ember",
    "emberjs",
    "ember-addon",
    "estimated",
    "estimation",
    "medium",
    "medium-like",
    "reading",
    "remaining",
    "time"
  ],
  "repository": "https://github.com/DazzlingFugu/ember-reading-time",
  "homepage": "https://github.com/DazzlingFugu/ember-reading-time",
  "bugs": "https://github.com/DazzlingFugu/ember-reading-time/issues",
  "license": "MIT",
  "author": {
    "name": "Dazzling Fugu",
    "url": "https://github.com/DazzlingFugu"
  },
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "files": [
    "/addon",
    "/app",
    "/config/environment.js",
    "/index.js"
  ],
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "concurrently \"npm:lint:*(!fix)\" --names \"lint:\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "concurrently \"npm:lint:css -- --fix\"",
    "lint:fix": "concurrently \"npm:lint:*:fix\" --names \"fix:\"",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "concurrently \"npm:lint\" \"npm:test:*\" --names \"lint,test:\"",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each"
  },
  "dependencies": {
    "@babel/core": "^7.24.4",
    "ember-auto-import": "^2.7.2",
    "ember-cli-babel": "^8.2.0",
    "ember-cli-htmlbars": "^6.3.0",
    "humanize-duration": "^3.32.0",
    "process": "^0.11.10",
    "reading-time": "^1.5.0",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "webpack": "^5.91.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@ember/optional-features": "^2.1.0",
    "@ember/string": "^4.0.0",
    "@ember/test-helpers": "^4.0.4",
    "@embroider/test-setup": "^3.0.3",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "broccoli-asset-rev": "^3.0.0",
    "concurrently": "^9.0.1",
    "ember-cli": "~5.8.1",
    "ember-cli-clean-css": "^3.0.0",
    "ember-cli-dependency-checker": "^3.3.2",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-load-initializers": "^3.0.1",
    "ember-page-title": "^8.2.3",
    "ember-qunit": "^8.0.2",
    "ember-resolver": "^13.0.1",
    "ember-source": "~5.12.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^5.13.0",
    "ember-try": "^3.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ember": "^12.3.3",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-qunit": "^8.1.1",
    "loader.js": "^4.7.0",
    "prettier": "^3.2.5",
    "qunit": "^2.20.1",
    "qunit-dom": "^3.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.1.0"
  },
  "peerDependencies": {
    "ember-source": ">= 4.0.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  }
}
